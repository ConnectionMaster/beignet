TOP=.
SUBDIRS=src src/sim src/intel src/x11
include Makefile.defs

LIBS=-Wl,--no-undefined $(LIB_BACKEND) $(LOCAL_LIBS) -ldl -lpthread -lGL

all: $(LIB) $(LIBMAJOR) $(LIBBASE)

$(LIB): $(OBJ) $(LIB_BACKEND)
	$(CXX) $(CXXFLAGS) -shared -o $@ $(OBJ) $(LIBS)

$(LIBMAJOR): $(LIB)
	rm -f $@
	ln -s $(LIB) $@

$(LIBBASE): $(LIBMAJOR)
	rm -f $@
	ln -s $(LIBMAJOR) $@

clean:
	rm -f $(LIB) $(LIBMAJOR) $(LIBBASE)

$(LIB_BACKEND):
	+cd backend && make all
